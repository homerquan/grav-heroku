<section id="banner" class="full-section">
    <div class="slash">
        <div class="inner">
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-6-24"  {% if (page.header.image) %} style="background-repeat:no-repeat; background-image: url('{{page.header.image}}'); background-position: -380px 100%;" {% endif %}>   
                </div>
                <div class="pure-u-1 pure-u-md-12-24">
                  <div class="splash">
                    <h2>{{page.header.title}}</h2>
                    <h3>{{page.header.sub}}</h3>
                    {% if (page.header.actions) %}
                    <ul class="actions">
                        <li><a href="#" class="button rev convospot_click" data-convospot-intention="request_demo" ontap="showConvospot()" onclick="showConvospot()">Request a demo</a></li>
                    </ul>
                    {% endif %}
                  </div>  
                </div>
                <div class="pure-u-1 pure-u-md-6-24"  {% if (page.header.image) %} style="background-repeat:no-repeat; background-image: url('{{page.header.image}}'); background-position: 40px 100%;" {% endif %}>   
                </div>
            </div>
        </div>
    </div>
</section>
