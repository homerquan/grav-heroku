<section id="ribbon">
    <div class="impression">
        <div class="inner">
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-12-24" style="padding: 0 40px 0 80px;">
                    <h2>{{page.header.title}}</h2>
                    <div>
                        {{page.content}}
                    </div>
                </div>
                <div class="pure-u-1 pure-u-md-12-24">
                    {% if (page.header.image) %}
                    <div class="image-container">
                    <img style="float:right;max-width: 100%" src="{{page.header.image}}"></img>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
